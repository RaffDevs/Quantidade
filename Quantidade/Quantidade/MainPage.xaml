<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quantidade.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        <Label 
            Text="Quantidade"
            FontSize="20"
            HorizontalTextAlignment="Center"
            />
        <Label
            x:Name="LbQuantidade"
            Text="1"
            FontSize="48"
            TextColor="Red"
            HorizontalTextAlignment="Center"
            />

        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button 
                Text="+"
                BorderWidth="1.5"
                BorderColor="#707070"
                BackgroundColor="White"
                WidthRequest="90"
                HeightRequest="90"
                FontSize="48"
                CornerRadius="20"
                Clicked="Plus"
            />
            <Button 
                Text="-"
                BorderWidth="1.5"
                BorderColor="#707070"
                WidthRequest="90"
                HeightRequest="90"
                BackgroundColor="White"
                FontSize="48"
                CornerRadius="20"
                Clicked="Minus"
            />
        </StackLayout>
        

    </StackLayout>

</ContentPage>
